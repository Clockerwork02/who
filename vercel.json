{
  "version": 2,
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server/index.ts"
    }
  ],
  "env": {
    "VITE_PRIVY_APP_ID": "@privy_app_id"
  }
}
